{
  "name": "tavern",
  "version": "0.1.0",
  "private": true,
  "repository": "git@github.com:TavernLab/tavern-web.git",
  "author": "WÃ©sley Queiroz <wesley.coder@gmail.com> (https://github.com/wescoder)",
  "license": "MIT",
  "scripts": {
    "open": "google-chrome --user-data-dir=.tmp-chrome --remote-debugging-port=9222 http://localhost:3000",
    "test": "NODE_ENV=test node config/test.js --env=jsdom",
    "analyze": "cross-env ANALYZE=1 next build",
    "dev": "run-p serve open",
    "serve": "next",
    "build": "next build",
    "start": "next start"
  },
  "now": {
    "alias": "tavern.now.sh",
    "dotenv": ".env.production",
    "public": true
  },
  "jest": {
    "collectCoverageFrom": [
      "components/**/*.{js,jsx,mjs}",
      "pages/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/components/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/components/**/?(*.)(spec|test).{js,jsx,mjs}",
      "<rootDir>/pages/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/pages/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^@components/(.*)": "<rootDir>/components/$1",
      "^@pages/(.*)": "<rootDir>/pages/$1",
      "^@app/(.*)": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "jss": "^9.7.0",
    "material-ui": "^1.0.0-beta.29",
    "material-ui-icons": "^1.0.0-beta.17",
    "next": "^5.0.0",
    "next-redux-wrapper": "^1.3.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-jss": "^8.3.3",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@zeit/next-css": "^0.0.7",
    "@zeit/next-sass": "^0.0.9",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-jest": "^22.2.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "6.26.0",
    "cross-env": "^5.1.3",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.0",
    "hygen": "^1.4.8",
    "jest": "20.0.4",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "object-assign": "^4.1.1",
    "promise": "^8.0.1",
    "puppeteer": "^1.0.0",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "webpack": "3.8.1",
    "webpack-bundle-analyzer": "^2.10.0",
    "whatwg-fetch": "^2.0.3"
  }
}
