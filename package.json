{
  "name": "tavern",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://tavern.now.sh",
  "repository": "git@github.com:TavernLab/tavern-web.git",
  "author": "WÃ©sley Queiroz <wesley.coder@gmail.com> (https://github.com/wescoder)",
  "license": "MIT",
  "scripts": {
    "dev": "run-p serve opn",
    "serve": "pm2 start ecosystem.config.js --only tavern-web-dev",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "opn": "google-chrome --user-data-dir=.tmp-chrome --remote-debugging-port=9223 http://localhost:3000",
    "analyze": "cross-env ANALYZE=1 next build",
    "integration": "NODE_ENV=test node --experimental-modules ./integration",
    "testing": "NODE_ENV=test jest --watchAll",
    "test": "NODE_ENV=test jest"
  },
  "engines": {
    "node": "^9.2.0"
  },
  "now": {
    "alias": "tavern.now.sh",
    "dotenv": ".env.production",
    "public": true
  },
  "jest": {
    "collectCoverageFrom": [
      "components/**/*.{js,jsx,mjs}",
      "reducerss/**/*.{js,jsx,mjs}",
      "pages/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/components/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/components/**/?(*.)(spec|test).{js,jsx,mjs}",
      "<rootDir>/reducers/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/reducers/**/?(*.)(spec|test).{js,jsx,mjs}",
      "<rootDir>/pages/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/pages/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost:3001",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^@components/(.*)": "<rootDir>/components/$1",
      "^@reducers/(.*)": "<rootDir>/reducers/$1",
      "^@pages/(.*)": "<rootDir>/pages/$1",
      "^@app/(.*)": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "dependencies": {
    "@zeit/next-css": "^0.1.4",
    "@zeit/next-sass": "^0.1.1",
    "classnames": "^2.2.5",
    "dotenv": "4.0.0",
    "jss": "^9.7.0",
    "ls": "^0.2.1",
    "material-ui": "^1.0.0-beta.29",
    "material-ui-icons": "^1.0.0-beta.17",
    "next": "^5.0.0",
    "next-offline": "^2.2.0",
    "next-redux-wrapper": "^1.3.5",
    "node-sass": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-jss": "^8.3.3",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "webpack": "3.8.1",
    "webpack-bundle-analyzer": "^2.10.0",
    "workbox-webpack-plugin": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-jest": "^22.2.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.0",
    "get-chrome": "^0.0.2",
    "hygen": "^1.4.8",
    "npm-run-all": "^4.1.2",
    "object-assign": "^4.1.1",
    "pm2": "^2.10.1",
    "promise": "^8.0.1",
    "puppeteer": "^1.1.1",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "whatwg-fetch": "^2.0.3"
  }
}
